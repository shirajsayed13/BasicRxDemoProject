<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:id="@+id/rxJavaBasicButton"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="132dp"
            android:textSize="20sp"
            android:textAllCaps="true"
            android:text="@string/rx_java_basic_demo"/>

    <Button
            android:id="@+id/rxKotlinBasicButton"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:textAllCaps="true"
            android:text="@string/rx_kotlin_basic_demo"
            app:layout_constraintTop_toBottomOf="@+id/rxJavaBasicButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"/>
    <Button
            android:id="@+id/operatorButton"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:text="@string/operator"
            android:textAllCaps="true"
            app:layout_constraintTop_toBottomOf="@+id/rxKotlinBasicButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"/>

    <Button
            android:id="@+id/compositeDisposableButton"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:textAllCaps="true"
            android:text="@string/composite_disposable"
            app:layout_constraintTop_toBottomOf="@+id/operatorButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"/>

    <Button
            android:id="@+id/customDataButton"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:text="@string/custom_data"
            android:textAllCaps="true"
            app:layout_constraintTop_toBottomOf="@+id/compositeDisposableButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>